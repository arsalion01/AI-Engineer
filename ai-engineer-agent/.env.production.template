# AI Engineer Agent - Production Environment Configuration
# Copy this file to .env.production and fill in your production values

# ============================================================================
# Application Settings
# ============================================================================
NODE_ENV=production
APP_URL=https://your-domain.com
PORT=3000
LOG_LEVEL=info

# Domain and SSL settings
DOMAIN=your-domain.com
SSL_EMAIL=admin@your-domain.com

# ============================================================================
# Database Configuration
# ============================================================================
# Main PostgreSQL Database
POSTGRES_USER=ai_engineer_user
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=ai_engineer_agent
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql://ai_engineer_user:your-secure-password-here@postgres:5432/ai_engineer_agent

# TimescaleDB for Analytics
ANALYTICS_DATABASE_URL=postgresql://ai_engineer_user:your-secure-password-here@timescaledb:5432/ai_engineer_analytics

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_PASSWORD=your-redis-password-here
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://:your-redis-password-here@redis:6379

# ============================================================================
# Authentication & Security
# ============================================================================
# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# JWT Configuration
JWT_SECRET=your-jwt-secret-minimum-32-characters-long
JWT_EXPIRES_IN=7d

# Encryption key for sensitive data (must be 32 bytes)
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Session configuration
SESSION_SECRET=your-session-secret-key-here
SESSION_MAX_AGE=604800000

# ============================================================================
# AI Services Configuration
# ============================================================================
# Google Gemini API
GEMINI_API_KEY=your-gemini-api-key-here

# Rate limiting and quotas
GEMINI_REQUESTS_PER_DAY=1000
GEMINI_REQUESTS_PER_HOUR=100
GEMINI_REQUESTS_PER_MINUTE=10

# ============================================================================
# Email Configuration
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@your-domain.com
FROM_NAME=AI Engineer Agent

# ============================================================================
# Monitoring & Analytics
# ============================================================================
# Sentry for error tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Grafana Configuration
GRAFANA_USER=admin
GRAFANA_PASSWORD=your-grafana-password-here

# Analytics settings
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=90

# ============================================================================
# File Storage & Uploads
# ============================================================================
# File upload limits
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.json,.txt,.md,.pdf,.png,.jpg,.jpeg,.zip

# Storage configuration
STORAGE_TYPE=local
UPLOAD_PATH=/app/uploads

# S3 Configuration (if using cloud storage)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# S3_BUCKET=your-s3-bucket

# ============================================================================
# Rate Limiting & Security
# ============================================================================
# API Rate Limiting
API_RATE_LIMIT_WINDOW=900000
API_RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=https://your-domain.com
CORS_CREDENTIALS=true

# Security Headers
HELMET_ENABLED=true
TRUST_PROXY=1

# ============================================================================
# Background Jobs & Processing
# ============================================================================
# Job queue configuration
JOB_CONCURRENCY=5
JOB_ATTEMPTS=3
JOB_BACKOFF_DELAY=5000

# Workflow processing
WORKFLOW_TIMEOUT=300000
MAX_CONCURRENT_WORKFLOWS=10

# ============================================================================
# GitHub Integration (Optional)
# ============================================================================
# GitHub OAuth for repository access
# GITHUB_CLIENT_ID=your-github-client-id
# GITHUB_CLIENT_SECRET=your-github-client-secret

# GitHub repository for workflow templates
WORKFLOW_REPO_URL=https://github.com/oxbshw/ultimate-n8n-ai-workflows.git
WORKFLOW_REPO_BRANCH=main

# ============================================================================
# Backup & Maintenance
# ============================================================================
# Backup configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key

# Database maintenance
DB_VACUUM_SCHEDULE=0 3 * * 0
LOG_ROTATION_DAYS=7

# ============================================================================
# Performance & Scaling
# ============================================================================
# Connection pooling
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=10000

# Caching
CACHE_TTL=3600
REDIS_KEY_PREFIX=ai_engineer:

# WebSocket configuration
WS_MAX_CONNECTIONS=1000
WS_HEARTBEAT_INTERVAL=30000

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_TEAM_COLLABORATION=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_WORKFLOW_TEMPLATES=true
ENABLE_REAL_TIME_COLLABORATION=true
ENABLE_NOTIFICATIONS=true
ENABLE_API_DOCUMENTATION=true

# ============================================================================
# Development & Debug (keep false in production)
# ============================================================================
DEBUG=false
VERBOSE_LOGGING=false
ENABLE_PLAYGROUND=false